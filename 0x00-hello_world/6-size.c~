#include <stdio.h>

/**
 * main - Entry point
 *
 * Return: Always 0 (Success)
 */
int main(void)
{
char charVar;
int intVar;
long longVar;
long long longlongVar;
float floatVar;

printf("Size of a char: %i byte(s)\n", sizeof(charVar));
printf("Size of an int: %i byte(s)\n", sizeof(intVar));
printf("Size of a long int: %i byte(s)\n", sizeof(longVar));
printf("Size of a long long int: %i byte(s)\n", sizeof(longlongVar));
printf("Size of a float: %i byte(s)\n", sizeof(floatVar));
 return (0);
}
